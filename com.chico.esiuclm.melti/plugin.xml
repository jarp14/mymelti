<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.help.contexts">
      <contexts
            file="contexts.xml">
      </contexts>
   </extension>
   
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            class="com.chico.esiuclm.melti.preferences.MeltiPreferencePage"
            id="com.esiuclm.melti.preferences.MeltiPreferencePage"
            name="Melti">
      </page>
   </extension>
   
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer
            class="com.chico.esiuclm.melti.preferences.PreferenceInitializer">
      </initializer>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <category
            id="com.chico.esiuclm.melti.commands.category"
            name="Melti">
      </category>
      <command
            categoryId="com.chico.esiuclm.melti.commands.category"
            id="com.chico.esiuclm.melti.commands.initServer"
            name="Iniciar escucha">
      </command>
      <command
            categoryId="com.chico.esiuclm.melti.commands.category"
            id="com.chico.esiuclm.melti.commands.stopServer"
            name="Parar escucha">
      </command>
      <command
            categoryId="com.chico.esiuclm.melti.commands.category"
            id="com.chico.esiuclm.melti.commands.uploadSolution"
            name="Enviar soluci贸n">
      </command>
      <command
            categoryId="com.chico.esiuclm.melti.commands.category"
            id="com.chico.esiuclm.melti.commands.seeSolution"
            name="Ver soluci贸n">
      </command>
      <command
            categoryId="com.chico.esiuclm.melti.commands.category"
            id="com.chico.esiuclm.melti.commands.qualify"
            name="Calificar">
      </command>
      <command
            categoryId="com.chico.esiuclm.melti.commands.category"
            id="com.chico.esiuclm.melti.commands.seeQualification"
            name="Ver calificaci贸n">
      </command>
      <command
            categoryId="com.chico.esiuclm.melti.commands.category"
            id="com.chico.esiuclm.melti.commands.refreshSolutions"
            name="Refrescar soluciones">
      </command>
      <command
            categoryId="com.chico.esiuclm.melti.commands.category"
            id="com.chico.esiuclm.melti.commands.refreshTasks"
            name="Refrescar tareas">
      </command>
   </extension>
   
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="com.chico.esiuclm.melti.handlers.StartServer"
            commandId="com.chico.esiuclm.melti.commands.initServer">
      </handler>
      <handler
            class="com.chico.esiuclm.melti.handlers.StopServer"
            commandId="com.chico.esiuclm.melti.commands.stopServer">
      </handler>
      <handler
            class="com.chico.esiuclm.melti.handlers.UploadSolution"
            commandId="com.chico.esiuclm.melti.commands.uploadSolution">
      </handler>
      <handler
            class="com.chico.esiuclm.melti.handlers.SeeSolution"
            commandId="com.chico.esiuclm.melti.commands.seeSolution">
      </handler>
      <handler
            class="com.chico.esiuclm.melti.handlers.QualifySolution"
            commandId="com.chico.esiuclm.melti.commands.qualify">
      </handler>
      <handler
            class="com.chico.esiuclm.melti.handlers.SeeQualification"
            commandId="com.chico.esiuclm.melti.commands.seeQualification">
      </handler>
      <handler
            class="com.chico.esiuclm.melti.handlers.RefreshSolutionsView"
            commandId="com.chico.esiuclm.melti.commands.refreshSolutions">
      </handler>
      <handler
            class="com.chico.esiuclm.melti.handlers.RefreshTasksView"
            commandId="com.chico.esiuclm.melti.commands.refreshTasks">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="com.chico.esiuclm.melti.commands.initServer"
            contextId="org.eclipse.ui.contexts.window"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M1+1">
      </key>
      <key
            commandId="com.chico.esiuclm.melti.commands.stopServer"
            contextId="org.eclipse.ui.contexts.window"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M1+2">
      </key>
      <key
            commandId="com.chico.esiuclm.melti.commands.uploadSolution"
            contextId="org.eclipse.ui.contexts.window"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M1+4">
      </key>
   </extension>
   
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu?after=additions">
         <menu
               id="com.chico.esiuclm.melti.menus.MeltiMenu"
               label="Melti"
               mnemonic="M">
            <command
                  commandId="com.chico.esiuclm.melti.commands.initServer"
                  icon="icons/start.png"
                  id="com.chico.esiuclm.melti.menus.initServer"
                  mnemonic="S"
                  style="push">
            </command>
            <command
                  commandId="com.chico.esiuclm.melti.commands.stopServer"
                  icon="icons/stop.png"
                  id="com.chico.esiuclm.melti.menus.stopServer"
                  mnemonic="S"
                  style="push">
            </command>
            <command
                  commandId="com.chico.esiuclm.melti.commands.uploadSolution"
                  icon="icons/upload.png"
                  id="com.chico.esiuclm.melti.menus.uploadSolution"
                  mnemonic="U"
                  style="push">
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            locationURI="toolbar:org.eclipse.ui.main.toolbar?after=additions">
         <toolbar
               id="meltiToolbar">
            <command
                  commandId="com.chico.esiuclm.melti.commands.initServer"
                  icon="icons/start.png"
                  id="com.chico.esiuclm.melti.toolbars.initServer"
                  style="push"
                  tooltip="Iniciar escucha">
            </command>
            <command
                  commandId="com.chico.esiuclm.melti.commands.stopServer"
                  icon="icons/stop.png"
                  id="com.chico.esiuclm.melti.toolbars.stopServer"
                  style="push"
                  tooltip="Parar escucha">
            </command>
            <command
                  commandId="com.chico.esiuclm.melti.commands.uploadSolution"
                  icon="icons/upload.png"
                  id="com.chico.esiuclm.melti.toolbars.uploadSolution"
                  style="push"
                  tooltip="Enviar soluci贸n">
            </command>
         </toolbar>
      </menuContribution>
   </extension>
   
   <extension
         point="org.eclipse.ui.views">
      <category
            id="com.chico.esiuclm.melti"
            name="Melti">
      </category>
      <view
            category="com.chico.esiuclm.melti"
            class="com.chico.esiuclm.melti.gui.views.StatementView"
            icon="icons/statement.png"
            id="com.chico.esiuclm.melti.views.statementView"
            name="Enunciado"
            restorable="true">
      </view>
      <view
            category="com.chico.esiuclm.melti"
            class="com.chico.esiuclm.melti.gui.views.SolutionsView"
            icon="icons/solutions.png"
            id="com.chico.esiuclm.melti.views.solutionsView"
            name="Soluciones"
            restorable="true">
      </view>
      <view
            category="com.chico.esiuclm.melti"
            class="com.chico.esiuclm.melti.gui.views.MyTasksView"
            icon="icons/mytasks.png"
            id="com.chico.esiuclm.melti.views.mytasksView"
            name="Mis Tareas"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="com.chico.esiuclm.melti.perspectives.StudentPerspectiveFactory"
            id="com.chico.esiuclm.melti.perspective1"
            name="Alumnos">
      </perspective>
      <perspective
            class="com.chico.esiuclm.melti.perspectives.TeacherPerspectiveFactory"
            id="com.chico.esiuclm.melti.perspective2"
            name="Profesores">
      </perspective>
   </extension>
   

</plugin>
